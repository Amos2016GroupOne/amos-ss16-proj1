<?xml version='1.0' encoding='utf-8'?>
    <widget id="de.fau.amos.groupOne.BLERemote" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BLE Remote</name>
    <description>
        An evaluation of Cordova+BLE
    </description>
    <author email="" href="https://github.com/Amos2016GroupOne/amos-ss16-proj1">
        FAU AMOS 2016 Group One
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="23" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="none"/>
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <engine name="android" spec="~5.1.1" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/res/icons/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="www/res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/res/icons/ios/icon-180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/res/icons/ios/icon-60.png" width="60" height="60" />
        <icon src="www/res/icons/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/res/icons/ios/icon-76.png" width="76" height="76" />
        <icon src="www/res/icons/ios/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/res/icons/ios/icon-40.png" width="40" height="40" />
        <icon src="www/res/icons/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/res/icons/ios/icon-57.png" width="57" height="57" />
        <icon src="www/res/icons/ios/icon-72@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/res/icons/ios/icon-72.png" width="72" height="72" />
        <icon src="www/res/icons/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/res/icons/ios/icon-29.png" width="29" height="29" />
        <icon src="www/res/icons/ios/icon-29@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/res/icons/ios/icon-50.png" width="50" height="50" />
        <icon src="www/res/icons/ios/icon-50@2x.png" width="100" height="100" />
    </platform>
    <plugin name="cordova-plugin-bluetooth-status" spec="~1.0.4" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-bluetoothle" spec="~4.0.0" />

</widget>
